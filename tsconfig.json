{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveSymlinks": true,
    "removeComments": false,
    "noImplicitAny": false,
    "listFiles": true
  },
  "exclude": [
    "node_modules",
    "typings",
    "bin"
  ]
}
